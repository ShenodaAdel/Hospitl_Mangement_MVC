@model Hospitl_Mangement_MVC.ViewModels.ScheduleAppointmentViewModel

<h2>Schedule Appointment</h2>

<form asp-action="Schedule" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="DoctorId" />

    <div class="form-group">
        <label asp-for="PatientId">Select Patient</label>
        <select asp-for="PatientId" class="form-control">
            <option value="">-- Select Patient --</option>
            @foreach (var patient in Model.Patients)
            {
                <option value="@patient.Value">@patient.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentDate">Appointment Date</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReasonForVisit">Reason for Visit</label>
        <input asp-for="ReasonForVisit" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Schedule</button>
</form>
