@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Department";
}

<h2>All Department  </h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DepartmentName </th>
           <th>Location </th>
            <th>Actions</th> <!-- New column for the buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName </td>
                <td>@department.Location </td>
                <td>
                    <!-- Edit Button with Icon -->
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i> <!-- Pencil icon for Edit -->
                    </a>
                    <!-- Delete Button with Icon -->
                    <form asp-action="Delete" asp-route-id="@department.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Department?');">
                            <i class="bi bi-trash"></i> <!-- Trash icon for Delete -->
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
