@model Medication
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Medicine</h1>


<form method="post" asp-action="Delete">
    <input asp-for="MedicationID" hidden />
    <div class="container p-3 mt-4 border border-info" style="border-radius:50px;">
        <div class="row p-2">
            <h2 class="text-dark">Delete Medicine</h2>
            <hr />
        </div>
        <div class="mb-2">
            <label asp-for="MedicationName"></label>
            <input asp-for="MedicationName" class="form-control" disabled />
        </div>
        <div class="mb-2">
            <label asp-for="Dosage"></label>
            <input asp-for="Dosage" class="form-control" disabled />
        </div>
        <div class="mb-2">
            <label asp-for="Frequenccy"></label>
            <input asp-for="Frequenccy" class="form-control" disabled />
        </div>
        <div class="mb-2">
            <label asp-for="SideEffectes"></label>
            <input asp-for="SideEffectes" class="form-control" disabled />
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px; margin-right:5px;">Delete</button>
        <a asp-action="GetAllMedicines" asp-controller="Nurse" class="btn btn-secondary" style="width:150px">
            Back to Items
        </a>
    </div>
</form>

